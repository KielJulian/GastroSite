{
  "builds": [
    {
      "src": "nuxt.config.ts",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": [
          "content/**"
        ],
        "tscOptions": {
          "moduleResolution": "node",
          "skipLibCheck": true
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/api/_content/(.*)",
      "dest": "/api/_content/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}