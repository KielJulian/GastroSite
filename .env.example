# API Keys - Replace with your actual keys in .env file (not in git)
API_KEY=your-api-key-here

# Database Connection
DB_HOST=localhost
DB_USER=username
DB_PASSWORD=password
DB_NAME=database_name

# Authentication
AUTH_SECRET=your-auth-secret-here
JWT_SECRET=your-jwt-secret-here

# Admin credentials should never be in git, only in your local .env
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password

# Site Configuration
SITE_URL=http://localhost:3000
ENVIRONMENT=development

# Environment variables
NITRO_PRESET=vercel
NODE_ENV=production
NODE_OPTIONS=--max-old-space-size=4096

# Site URLs
SITE_URL=https://your-site.com
ENVIRONMENT=production
NUXT_PUBLIC_API_BASE_URL=https://your-site.com

# Disable cache for content API
NUXT_CONTENT_CACHE=false

# Nuxt Studio Configuration (add these after first successful deployment)
# NUXT_PUBLIC_STUDIO_TOKENS=your-studio-token-here
# NUXT_PUBLIC_STUDIO_API_URL=https://api.nuxt.studio
# NUXT_STUDIO_URL=https://nuxt.studio
# NUXT_PUBLIC_STUDIO_SITE_ID=your-studio-site-id-here